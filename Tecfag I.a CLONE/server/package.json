{
  "name": "tec-ia-backend",
  "version": "1.0.0",
  "description": "Backend API for Tec I.A Industrial Intelligence Hub",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "npm run build && node dist/index.js",
    "pm2:start": "npm run build && pm2 start ../ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop tecfag-api",
    "pm2:restart": "pm2 restart tecfag-api",
    "pm2:logs": "pm2 logs tecfag-api",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 list",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:migrate:import": "tsx migrate-data.ts import",
    "test": "jest"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.22.0",
    "@types/morgan": "^1.9.10",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "groq-sdk": "^0.37.0",
    "ioredis": "^5.9.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.8.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.2",
    "redis": "^4.6.0",
    "zod": "^3.23.8",
    "tsx": "^4.19.1"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.7.4",
    "@types/pdf-parse": "^1.1.4",
    "@types/pdfkit": "^0.17.4",
    "better-sqlite3": "^12.6.2",
    "prisma": "^5.22.0",
    "typescript": "^5.6.2"
  }
}